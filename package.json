{
  "name": "@evojs/ussr",
  "version": "0.1.1",
  "description": "USSR: server-side renderer",
  "license": "MIT",
  "main": "core/index.ts",
  "bin": {
    "ussr": "cli/ussr.js"
  },
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "./build",
    "prerelease": "npm run build",
    "release": "npm publish --access public dist/",
    "test": "jest --coverage --detectOpenHandles",
    "lint": "tsc --noemit && eslint '**/*.{ts,tsx}' --fix --max-warnings=0",
    "install": "patch-package"
  },
  "dependencies": {
    "@abraham/reflection": "^0.12.0",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "dotenv": "^16.3.1",
    "eventemitter3": "^5.0.1",
    "history": "^5.3.0",
    "html-loader": "^4.2.0",
    "inversify": "^6.0.2",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.7.6",
    "mobx": "^6.12.0",
    "mobx-react": "^9.1.0",
    "ms": "^2.1.3",
    "nodemon-webpack-plugin": "^4.8.2",
    "patch-package": "^8.0.0",
    "postcss-loader": "^7.3.3",
    "preact": "^10.19.3",
    "preact-render-to-string": "^6.3.1",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "source-map-loader": "^4.0.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "~5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "@evojs/eslint-plugin": "^6.0.1",
    "@types/lodash": "^4.14.202",
    "@types/node": "^18.19.3",
    "@typescript-eslint/eslint-plugin": "~6.14.0",
    "@typescript-eslint/parser": "~6.14.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "engines": {
    "node": "^10.12.0 || >=12.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "./",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(ts|js)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.spec.json"
        }
      ]
    }
  },
  "author": {
    "name": "Shamil Sultanov",
    "email": "shamil.amirovich@gmail.com"
  },
  "keywords": [
    "preact",
    "jsx",
    "oop",
    "evojs",
    "ussr"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evotool/js-ussr.git"
  },
  "bugs": {
    "url": "https://github.com/evotool/js-ussr/issues"
  },
  "homepage": "https://github.com/evotool/js-ussr#readme"
}
