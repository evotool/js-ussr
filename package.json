{
  "name": "@evojs/ussr",
  "version": "0.2.1",
  "description": "USSR is a Server-Side Renderer",
  "license": "MIT",
  "main": "core/index.ts",
  "bin": {
    "ussr": "cli/ussr.js"
  },
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "./build",
    "prerelease": "npm run build",
    "release": "npm publish --access public dist/",
    "test": "jest --coverage --detectOpenHandles",
    "lint": "tsc --noemit && eslint '**/*.{ts,tsx}' --fix --max-warnings=0"
  },
  "dependencies": {
    "@abraham/reflection": "^0.13.0",
    "clean-webpack-plugin": "^4.0.0",
    "commander": "^14.0.2",
    "copy-webpack-plugin": "^13.0.1",
    "core-js": "^3.47.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.4",
    "dotenv": "^17.2.3",
    "eventemitter3": "^5.0.1",
    "history": "^5.3.0",
    "html-loader": "^5.1.0",
    "inversify": "^7.10.8",
    "jest": "^30.2.0",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.9.4",
    "mobx": "^6.15.0",
    "mobx-react": "^9.2.1",
    "ms": "^2.1.3",
    "nodemon-webpack-plugin": "^4.8.2",
    "postcss-loader": "^8.2.0",
    "preact": "^10.28.1",
    "preact-render-to-string": "^6.6.4",
    "sass": "~1.97.1",
    "sass-loader": "~16.0.6",
    "source-map-loader": "^5.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "~5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "devDependencies": {
    "@evojs/eslint-plugin": "^7.1.0",
    "@types/lodash": "^4.17.21",
    "@types/node": "^24.10.4",
    "@types/nodemon": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "~7.13.1",
    "@typescript-eslint/parser": "~7.13.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0"
  },
  "engines": {
    "node": "^10.12.0 || >=12.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "./",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(ts|js)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.spec.json"
        }
      ]
    }
  },
  "author": {
    "name": "Shamil Sultanov",
    "email": "shamil.amirovich@gmail.com"
  },
  "keywords": [
    "preact",
    "jsx",
    "oop",
    "evojs",
    "ussr"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evotool/js-ussr.git"
  },
  "bugs": {
    "url": "https://github.com/evotool/js-ussr/issues"
  },
  "homepage": "https://github.com/evotool/js-ussr#readme"
}
