{
  "name": "@evojs/ussr",
  "version": "0.1.31",
  "description": "USSR: server-side renderer",
  "license": "MIT",
  "main": "core/index.ts",
  "bin": {
    "ussr": "cli/ussr.js"
  },
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "./build",
    "prerelease": "npm run build",
    "release": "npm publish --access public dist/",
    "test": "jest --coverage --detectOpenHandles",
    "lint": "tsc --noemit && eslint '**/*.{ts,tsx}' --fix --max-warnings=0",
    "install": "patch-package"
  },
  "dependencies": {
    "@abraham/reflection": "^0.12.0",
    "clean-webpack-plugin": "^4.0.0",
    "commander": "^12.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "core-js": "^3.36.0",
    "css-loader": "^6.10.0",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "dotenv": "^16.4.5",
    "eventemitter3": "^5.0.1",
    "history": "^5.3.0",
    "html-loader": "^5.0.0",
    "inversify": "^6.0.2",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.8.1",
    "mobx": "^6.12.0",
    "mobx-react": "^9.1.0",
    "ms": "^2.1.3",
    "nodemon-webpack-plugin": "^4.8.2",
    "patch-package": "^8.0.0",
    "postcss-loader": "^8.1.1",
    "preact": "^10.19.6",
    "preact-render-to-string": "^6.4.0",
    "sass": "^1.72.0",
    "sass-loader": "^14.1.1",
    "source-map-loader": "^5.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "~5.4.2",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "@evojs/eslint-plugin": "^7.0.1",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.11.28",
    "@typescript-eslint/eslint-plugin": "~7.2.0",
    "@typescript-eslint/parser": "~7.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "engines": {
    "node": "^10.12.0 || >=12.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "./",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(ts|js)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.spec.json"
        }
      ]
    }
  },
  "author": {
    "name": "Shamil Sultanov",
    "email": "shamil.amirovich@gmail.com"
  },
  "keywords": [
    "preact",
    "jsx",
    "oop",
    "evojs",
    "ussr"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evotool/js-ussr.git"
  },
  "bugs": {
    "url": "https://github.com/evotool/js-ussr/issues"
  },
  "homepage": "https://github.com/evotool/js-ussr#readme"
}
